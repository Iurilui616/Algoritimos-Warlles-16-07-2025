#include <stdio.h>
#include <stdlib.h>

int main()
{int dia, mes, ano;

    printf("Digite o dia (1 a 30): ");
    scanf("%d", &dia);
    if (dia < 1 || dia > 30) {
        printf("Dia inválido!\n");
        return 1;
    }

    printf("Digite o mês (1 a 12): ");
    scanf("%d", &mes);
    if (mes < 1 || mes > 12) {
        printf("Mês inválido!\n");
        return 1;
    }

    printf("Digite o ano: ");
    scanf("%d", &ano);

    printf("Data formatada: %02d/%02d/%04d\n", dia, mes, ano);


    return 0;
}
