#include <stdio.h>
#include <stdlib.h>

int main()
{
 int litros, km;
 int totalKm = 0, totalLitros = 0;

    while (1) {
        printf("Entre com os litros consumidos (1 para finalizar): ");
        scanf("%d", &litros);

        if (litros == -1) {
            break;
        }

        printf("Entre com os km percorridos: ");
        scanf("%d", &km);

        printf("A taxa km/litro para esse tanque foi %d\n", km / litros);

        total_km + = km;
        total_litros + = litros;
    }

    if (total_litros > 0) {
        printf("A taxa total de km/litro foi %d\n", totalKm / totalLitros);
    } else {
        printf("Nenhum dado inserido.\n");
    }
    return 0;
}
