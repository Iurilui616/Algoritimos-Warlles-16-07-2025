#include <stdio.h>
#include <stdlib.h>

int main()
{
 float litros, km;
 float total_km = 0, total_litros = 0;

    while (1) {
        printf("Entre com os litros consumidos (1 para finalizar): ");
        scanf("%f", &litros);

        if (litros == -1) {
            break;
        }

        printf("Entre com os km percorridos: ");
        scanf("%f", &km);

        printf("A taxa km/litro para esse tanque foi %.2f\n", km / litros);

        total_km + = km;
        total_litros + = litros;
    }

    if (total_litros > 0) {
        printf("A taxa total de km/litro foi %.2f\n", total_km / total_litros);
    } else {
        printf("Nenhum dado inserido.\n");
    }
    return 0;
}
