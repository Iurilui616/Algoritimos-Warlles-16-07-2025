#include <stdio.h>
#include <stdlib.h>

int main()
{
 int a, b;
    int som, sub, mul, divi;
    int res;

    printf("Informe a: ");
    scanf("%d", &a);

    printf("Informe b: ");
    scanf("%d", &b);

    som = a + b;
    sub = a - b;
    mul = a * b;
    divi = a / b;
    res = a % b;

    printf("Resultado da adicao: %d\n", som);
    printf("Resultado da subtracao: %d\n", sub);
    printf("Resultado da multiplicacao: %d\n", mul);
    printf("Resultado da divisao: %d\n", divi);
    printf("Resultado do resto: %d\n", res);
}
